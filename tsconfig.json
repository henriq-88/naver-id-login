{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./lib",
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./lib",
    "strict": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
  "typeRoots": [
    "src/types"
  ]
}